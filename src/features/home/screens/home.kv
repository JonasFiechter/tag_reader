#:kivy 1.0.9

<TagReader>:
    BoxLayout:
        canvas:
            Rectangle:
                pos: self.center_x - 5, 5
                size: 40, 4
        Button:
            text: 'Back to menu'
            on_press: root.manager.current = 'Menu'

<MenuScreen>:
    BoxLayout:
        Button:
            text: 'Goto settings'
            on_press: root.manager.current = 'Settings'
        Button:
            text: 'Quit'
            on_press: root.close_app()
        ToggleButton:
            text:'Tag Reader'
            on_press: root.manager.current = 'TagReader'

<SettingsScreen>:
    BoxLayout:
        Button:
            text: 'My settings button'
            on_press: root.log_on_screen()
        Button:
            text: 'Back to menu'
            on_press: root.manager.current = 'Menu'
